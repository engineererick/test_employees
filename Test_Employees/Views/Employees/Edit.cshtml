@model Test_Employees.Models.Employee
@{
    ViewData["Title"] = "Employees";
}

@if (TempData["duplicate_rfc"] != null)
{
    <script>
        swal("ERROR", "Duplicated RFC", "error")
    </script>
}

<div class="container">
    <div class="row">
        <div class="col">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="RFC" class="control-label"></label>
                    <input asp-for="RFC" class="form-control" />
                    <span asp-validation-for="RFC" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BornDate" class="control-label"></label>
                    <input asp-for="BornDate" class="form-control" />
                    <span asp-validation-for="BornDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<EmployeeStatus>()">
                        <option selected value="">Please select...</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}